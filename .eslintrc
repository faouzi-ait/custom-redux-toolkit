{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react", "import", "prettier"],
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["**/*.test.js", "**/*.spec.js"],
  "rules": {
    "prettier/prettier": "error",
    "indent": ["error", 2,   {
    // To avoid conflict with switch statements 
    "SwitchCase": 1,
    "ignoredNodes": ["ConditionalExpression"]
  }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "import/no-unresolved": "error",
    "react/prop-types": "off" // Disable prop-types check for functional components
    // Add more rules as needed
  }
}
